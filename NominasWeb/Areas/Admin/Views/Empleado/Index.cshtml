@model List<Empleado>
@{
	ViewData["Title"] = ViewData["Title"] ?? "Lista de Empleados";
}

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="col-12 text-center">
			<h2 class="text-white py-2">@ViewData["Title"]</h2>
		</div>
	</div>
	<div class="row">
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Empleado" asp-action="Crear" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> Crear Nuevo Empleado
				</a>
			</div>
		</div>

		<div class="table-responsive-sm">
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Nombre</th>
						<th scope="col">Cedula</th>
						<th scope="col">Departamento</th>
						<th scope="col">Puesto</th>
						<th scope="col">Salario Mensual</th>
						<th scope="col">Nómina</th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					@foreach (var empleado in Model)
					{
						<tr>
							<td>@empleado.Id</td>
							<td>@empleado.Nombre</td>
							<td>@empleado.Cedula</td>
							<td>
								<a class="btn btn-secondary" asp-controller="Empleado" asp-action="Empleados" asp-route-id="@empleado.Departamento.Id">@empleado.Departamento.Nombre</a>
							</td>
							<td>@empleado.Puesto.Nombre</td>
							<td>@($"RD{empleado.SalarioMensual.ToString("C2")}")</td>
							<td>@empleado.Departamento.Nombre</td>
							<td class="d-flex justify-content-end">
								<div class="w-100">
									<a asp-controller="Empleado" asp-action="Editar" asp-route-id="@empleado.Id" class="btn btn-primary mx-2">
										<i class="bi bi-pencil-square"></i> Editar
									</a>
									<a asp-controller="Empleado" asp-action="Eliminar" asp-route-id="@empleado.Id" class="btn btn-danger mx-2">
										<i class="bi bi-trash-fill"></i> Eliminar
									</a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

