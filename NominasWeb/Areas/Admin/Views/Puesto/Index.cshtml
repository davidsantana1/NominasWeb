@model List<Puesto>
@{
    ViewData["Title"] = "Puestos";
}

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="col-12 text-center">
			<h2 class="text-white py-2">Lista de puestos</h2>
		</div>
	</div>
	<div class="row">
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="puesto" asp-action="Crear" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> Crear Nuevo Puesto
				</a>
			</div>
		</div>

		<div class="table-responsive-sm">
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Nombre</th>
						<th scope="col">Nivel de Riesgo</th>
						<th scope="col">Nivel Mínimo Salario</th>
						<th scope="col">Nivel Máximo Salario</th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					@foreach (var puesto in Model)
					{
						<tr>
							<td>@puesto.Id</td>
							<td>@puesto.Nombre</td>
							<td>@puesto.NivelDeRiesgo</td>
							<td>@($"RD{puesto.NivelMinimoSalario.ToString("C2")}")</td>
							<td>@($"RD{puesto.NivelMaximoSalario.ToString("C2")}")</td>
							<td class="d-flex justify-content-end">
								<div class="w-100">
									<a asp-controller="Puesto" asp-action="Editar" asp-route-id="@puesto.Id" class="btn btn-primary mx-2">
										<i class="bi bi-pencil-square"></i> Editar
									</a>
									<a asp-controller="Puesto" asp-action="Eliminar" asp-route-id="@puesto.Id" class="btn btn-danger mx-2">
										<i class="bi bi-trash-fill"></i> Eliminar
									</a>
									<a asp-controller="Empleado" asp-action="EmpleadosPorPuesto" asp-route-id="@puesto.Id" class="btn btn-outline-success mx-2">
										<i class="bi bi-eye-fill"></i> Ver Empleados
									</a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

