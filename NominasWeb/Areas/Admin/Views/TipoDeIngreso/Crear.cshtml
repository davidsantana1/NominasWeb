@{
	ViewData["Title"] = "Crear Tipo de Ingreso";
}
@model TipoDeIngreso

<div class="card shadow border-0 mb-4 mt-2">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="col-12 text-center">
			<h2 class="text-white py-2">Agregar Tipo de Ingreso</h2>
		</div>
	</div>
	<div class="row">
	</div>
	<div class="card-body p-4">
		<form class="row" method="post">
			<div class="border p-3">
				@* <div asp-validation-summary="ModelOnly"></div> *@
				<div class="form-floating py-2 col-12">
					<input asp-for="Nombre" class="form-control border-0 shadow">
					<label asp-for="Nombre" class="ms-2"></label>
					<span asp-validation-for="Nombre" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<select asp-for="DependeDeSalario" class="form-select border-0 shadow" id="dependeDeSalario">
						<option disabled selected>--¿Depende del Salario?--</option>
						<option value="true">Si</option>
						<option value="false">No</option>
					</select>
					<label asp-for="DependeDeSalario" class="ms-2"></label>
					<span asp-validation-for="DependeDeSalario" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<select asp-for="Estado" class="form-select border-0 shadow" id="Estado">
						<option disabled selected>--Estado--</option>
						<option value="true">Activo</option>
						<option value="false">Inactivo</option>
					</select>
					<label asp-for="Estado" class="ms-2"></label>
					<span asp-validation-for="Estado" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Porcentaje" class="form-control border-0 shadow">
					<label asp-for="Porcentaje" class="ms-2"></label>
					<span asp-validation-for="Porcentaje" class="text-danger"></span>
				</div>

				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Crear</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="TipoDeIngreso" asp-action="Index" class="btn btn-outline-primary border form-control">Volver a la Lista</a>
					</div>
				</div>
			</div>

		</form>

	</div>
</div>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}